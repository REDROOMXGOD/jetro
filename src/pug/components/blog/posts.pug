each val in posts
  article(class="blog-post blog-post--"+val.category)
    if val.category === 'quote'
      blockquote.blog-post__quote= val.quote
    else if val.category === 'ads' 
      h1.blog-post__header.heading
        a(href="#").blog-post__link= val.title
      span.blog-post__customer= val.customer
      p.blog-post__summary= val.summary
    else
      if val.imgsrc
        img(src=val.imgsrc, alt="post image").blog-post__image
      if val.videosrc
        video(src=val.videosrc controls).blog-post__video
      .row
        .col-3.col-lg-2
          ul.blog-post__info
            li
              span.blog-post__caption.heading Date
              span.blog-post__desc= val.date
            li
              span.blog-post__caption.heading Tags
              span.blog-post__desc= val.tags
            li
