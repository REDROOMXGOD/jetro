- var title = 'index';
include components/header.pug
main.main
  .ears
    .container
      .carousel.slide(data-ride='carousel')
        //- ol.carousel-indicators
        //-   li.active(data-target='#carouselExampleIndicators' data-slide-to='0')
        //-   li(data-target='#carouselExampleIndicators' data-slide-to='1')
        //-   li(data-target='#carouselExampleIndicators' data-slide-to='2')
        .carousel-inner
          .carousel-item.active
            img(src='./images/carousel-item-1.jpg' alt='First slide')
          .carousel-item
            img(src='./images/carousel-item-2.jpg' alt='Second slide')
          .carousel-item
            img(src='./images/carousel-item-3.jpg' alt='Third slide')
          .carousel-item
            img(src='./images/carousel-item-4.jpg' alt='Fourth slide')
          .carousel-item
            img(src='./images/carousel-item-5.jpg' alt='Fifth slide')
          .carousel-item
            img(src='./images/carousel-item-6.jpg' alt='Sixth slide')
        button.carousel-control-prev.carousel-control( role='button' data-slide='prev')
          span.carousel-control-prev-icon(aria-hidden='true')
          span.sr-only Previous
        button.carousel-control-next.carousel-control(role='button' data-slide='next')
          span.carousel-control-next-icon(aria-hidden='true')
          span.sr-only Next
      .carousel-nav
        .row
          .col-2
            button.carousel-nav__button
              img(src='./images/carousel-item-1.jpg' alt='First slide').carousel-nav__image
          .col-2
            button.carousel-nav__button
              img(src='./images/carousel-item-2.jpg' alt='Second slide').carousel-nav__image
          .col-2
            button.carousel-nav__button
              img(src='./images/carousel-item-3.jpg' alt='Third slide').carousel-nav__image
          .col-2
            button.carousel-nav__button
              img(src='./images/carousel-item-4.jpg' alt='Fourth slide').carousel-nav__image
          .col-2
            button.carousel-nav__button
              img(src='./images/carousel-item-5.jpg' alt='Fifth slide').carousel-nav__image
          .col-2
            button.carousel-nav__button
              img(src='./images/carousel-item-6.jpg' alt='Sixth slide').carousel-nav__image

include components/footer.pug